                <Paragraph>
                    <Span>
                        <Run/>
                    </Span>
                    <Run Text=" "/>
                    <Span>
                        <Run Text="שלם-&gt;מספר_שלם"/>
                        <Run Text="."/>
                    </Span>
                </Paragraph>
                <Paragraph>
                    <Span>
                        <Run/>
                        <Run Text=" "/>
                        <Run Text="ממשי-&gt;מספר_ממשי"/>
                        <Run Text=" "/>
                        <Run Text="."/>
                    </Span>
                </Paragraph>
                <Paragraph>
                    <Span>
                        <Run/>
                        <Run Text="תו-&gt;תו"/>
                        <Run Text="."/>
                        <Run Text=" "/>
                        <Run/>
                    </Span>
                </Paragraph>
                <Paragraph>
                    <Run Text="מחרוזת-&gt;מחרוזת"/>
                    <Run Text="."/>
                </Paragraph>
                <Paragraph>
                    <Span>
                        <Run Text="ולבחירה- אפשר לאתחלו או רק להצהיר ."/>
                    </Span>
                </Paragraph>
                <Paragraph>
                    <Span>
                        <Run Text="דוג:מספר_שלם ציון = 98 ; "/>
                    </Span>
                    <Run Text=" "/>
                </Paragraph>
                <Paragraph>
                    <Run Text=" "/>
                    <Run Text="    או "/>
                    <Run Text="מספר_שלם ציון ;"/>
                </Paragraph>
                <Paragraph>
                    <Run Text="דוג:מספר_ממשי גיל = 22.2 ;"/>
                </Paragraph>
                <Paragraph>
                    <Run Text="דוג:תו אות = 'ש' ; "/>
                    <Run Text=" "/>
