<Window x:Class="WpfApplication1.SafetyExit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="יציאה" 
        Height="160" Width="460" MinWidth="460" MinHeight="160" MaxWidth="460" MaxHeight="160" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen"
        Icon="..\Pictures\לוגו1.png" >
    <StackPanel>
        <StackPanel Orientation="Horizontal" Height="80">
            <Label Margin="0,25,0,0">?</Label>
            <Label Margin="0,25,0,0" HorizontalAlignment="Right">האם את/ה רוצה לשמור</Label>
            <Image Source="../Pictures/warning.gif" Width="50" Height="50" Margin="5" HorizontalAlignment="Right"></Image>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Height="54" Background="#FFECECEC" >
            <Button x:Name="btnYes" Width="75" Margin="275,15,0,15" Click="Button_Click_Yes">כן</Button>
            <Button x:Name="btnNo" Width="75" Margin="10,15,0,15" Click="Button_Click_No">לא</Button>
        </StackPanel>
    </StackPanel>
</Window>
